@model IEnumerable<AgendaMedica.Models.Agenda>

@{
    ViewData["Title"] = "Index";
}

<div class="container text-light mt-5">
    <h1 class="text-center display-5 text-primary">Cadastro de <span class="fw-bold">Agendamentos</span></h1>
<p>
    <a asp-action="Create" class="btn btn-outline-info btn-primary btn-lg w-25 text-light">Adicionar Novo Agendamento</a>
</p>
<table class="table table-info table-striped table-borderless">
    <thead>
        <tr>
                <th class="bg-primary text-white">
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
                <th class="bg-primary text-white">
                @Html.DisplayNameFor(model => model.Medico)
            </th>
                <th class="bg-primary text-white">
                @Html.DisplayNameFor(model => model.DataConsulta)
            </th>
                <th class="bg-primary text-white">
                @Html.DisplayNameFor(model => model.Status)
            </th>
                <th class="bg-primary"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medico.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td class="text-danger">
              <a asp-action="Edit" asp-route-id="@item.AgendaId"
                           class="btn btn-sm btn-dark btn-outline-secondary text-white me-2 my-3 d-inline-flex align-items-center">
               Editar
             </a>
             <a asp-action="Delete" asp-route-id="@item.AgendaId"
                           class="btn btn-sm btn-dark btn-outline-secondary text-white d-inline-flex align-items-center">
               Deletar
              </a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>
